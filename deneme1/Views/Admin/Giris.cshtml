
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Login</title>

    <!-- Fontfaces CSS-->
    <link href="~/coolad/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/coolad/vendor/fontawesome-6.7.2/css/all.min.css" rel="stylesheet" media="all">
    <link href="~/coolad/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/coolad/vendor/bootstrap-5.3.7.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/coolad/css/aos.css" rel="stylesheet" media="all">
    <link href="~/coolad/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/coolad/css/swiper-bundle.min.css" rel="stylesheet" media="all">
    <link href="~/coolad/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/coolad/css/theme.css" rel="stylesheet" media="all">

</head>

<body>
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/coolad/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.ErrorMessage
                                    
                                </div>
                            }
                            <form asp-controller="Admin" asp-action="Giris" method="post">
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <input class="au-input au-input--full mb-3" type="text" name="username" placeholder="kullanıcı adı">
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <input class="au-input au-input--full" type="password" name="password" placeholder="Şifre">
                                </div>
                                <div class="login-checkbox mt-3">
                                    <label>
                                        <input type="checkbox" name="remember">Beni Hatırla
                                    </label>
                                    <label>
										<a href="#">Şifremi unuttum</a>
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20 mt-3" type="submit">Giris Yap</button>
                                
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="~/coolad/js/vanilla-utils.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/coolad/vendor/bootstrap-5.3.7.bundle.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/coolad/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/coolad/vendor/chartjs/Chart.bundle.min.js"></script>

    <!-- Main JS-->
    <script src="~/coolad/js/bootstrap5-init.js"></script>
    <script src="~/coolad/js/main-vanilla.js"></script>
    <script src="~/coolad/js/swiper-bundle.min.js"></script>
    <script src="~/coolad/js/aos.js"></script>
    <script src="~/coolad/js/modern-plugins.js"></script>

</body>

</html>
<!-- end document-->